{
  "name": "il-fhir-certificator",
  "version": "1.1.1",
  "description": "FHIR Certificator for Israeli MoH",
  "scripts": {
    "build": "tsc -b",
    "serve": "node dist/app.js",
    "start": "npm run build && npm run serve",
    "dev": "cross-env NODE_ENV=dev nodemon -w src --exec \"npm run start\"",
    "rename-index": "node -e \"require('fs').rename('dist/bundle/index.js', 'dist/bundle/certificator.js', function(err) { if (err) console.log(err); console.log('Bundled file (dist/bundle/certificator.js) created and renamed successfully!') })\"",
    "bundle": "ncc build src/app.ts --minify --out dist/bundle && npm run rename-index"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "dotenv": "^16.4.5",
    "fs": "^0.0.1-security",
    "fume-fhir-converter": "^2.0.11",
    "path": "^0.12.7"
  },
  "author": "Ministry of Health Israel",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@vercel/ncc": "^0.38.1",
    "cross-env": "^7.0.3",
    "detect-indent": "^7.0.1",
    "detect-newline": "^4.0.1",
    "eslint": "^8.28.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3"
  }
}
